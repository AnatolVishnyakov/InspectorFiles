                <JFXToggleButton alignment="CENTER_LEFT" layoutY="79.0" prefHeight="60.0" prefWidth="319.0"
                                 text="Файлы по маске" toggleColor="#013760" toggleLineColor="#006ebc"/>
                <JFXTextField disable="true" labelFloat="true" layoutX="14.0" layoutY="134.0" prefHeight="26.0"
