        <Pane layoutX="37.0" layoutY="103.0" prefHeight="43.0" prefWidth="790.0">
            <children>
                <JFXComboBox fx:id="comboBoxPath" disable="true" layoutX="4.0" layoutY="8.0" prefHeight="28.0" prefWidth="611.0"/>
                <JFXButton alignment="CENTER" layoutX="621.0" layoutY="4.0" prefHeight="34.0"
                           prefWidth="155.0" styleClass="stub" text="Выбрать папку" onAction="#onSelectFolder"/>
            </children>
        </Pane>
        <JFXButton layoutX="705.0" layoutY="491.0" onAction="#onStop" prefHeight="53.0" prefWidth="108.0"
                   ripplerFill="#612133" styleClass="error" text="Стоп"/>
        <JFXButton layoutX="595.0" layoutY="491.0" onAction="#onScan" prefHeight="53.0" prefWidth="103.0"
                   ripplerFill="#1c3a51" styleClass="info" text="Пуск"/>
    </children>
</Pane>
