                <JFXToggleButton alignment="CENTER_LEFT" layoutY="77.0" prefHeight="58.0" prefWidth="214.0"
                                 text="Быстрый (без анализа содержимого файлов)" toggleColor="#013760"
                                 toggleLineColor="#006ebc" wrapText="true"/>
            </children>
        </Pane>
        <JFXProgressBar layoutX="41.0" layoutY="549.0" prefHeight="2.0" prefWidth="772.0"/>
        <Label layoutX="40.0" layoutY="526.0" prefHeight="17.0" prefWidth="546.0"/>
    </children>
</Pane>
