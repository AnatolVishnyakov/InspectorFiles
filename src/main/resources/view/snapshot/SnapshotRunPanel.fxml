<Pane prefHeight="558.0" prefWidth="827.0" styleClass="central-panel" stylesheets="@/css/style.css"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.inspector_files.controller.ScanSnapshotController">
    <children>
        <Label layoutX="40.0" layoutY="40.0" text="Снимок системы">
            <font>
